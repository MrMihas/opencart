<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->

<head>
    <!-- Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{{ title }}</title>
    {% if robots %}
    <meta name="robots" content="{{ robots }}" />
    {% endif %}
    <base href="{{ base }}" />
    {% if description %}
    <meta name="description" content="{{ description }}" />
    {% endif %} {% if keywords %}
    <meta name="keywords" content="{{ keywords }}" />
    {% endif %}
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ og_url }}" />
    {% if og_image %}
    <meta property="og:image" content="{{ og_image }}" />
    {% else %}
    <meta property="og:image" content="{{ logo }}" />
    {% endif %}
    <meta property="og:site_name" content="{{ name }}" />


    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">

    <!-- Stylesheets -->
    <!-- Default Stylesheets -->
    <script src="catalog/view/javascript/jquery-3.3.1.min.js" type="text/javascript"></script>

    <script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="catalog/view/theme/default/stylesheet/stylesheet.css" rel="stylesheet" />

    <!-- Bravo Stylesheets -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css"
        integrity="sha384-i1LQnF23gykqWXg6jxC2ZbCbUMxyw5gLZY6UiUS98LYV5unm8GWmfkIS6jqJfb4E" crossorigin="anonymous" />
    <!-- Bootstrap Reboot CSS -->
    <link rel="stylesheet" href="{{ style_link }}/bootstrap-reboot.min.css" />
    <!-- Bootstrap CSS -->
    <link href="{{ style_link }}/bootstrap.min.css" rel="stylesheet" media="screen" />


    <!-- Slisck slider -->
    <link rel="stylesheet" href="{{ style_link }}/slick.css" />
    <link rel="stylesheet" href="{{ style_link }}/slick-theme.css" />
    <!-- Main CSS -->
    <link rel="stylesheet" href="{{ style_link }}/main.css" />
    <!-- Bravo Scripts -->

    {% for style in styles %}
    <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
    {% endfor %} {% for script in scripts %}
    <script src="{{ script }}" type="text/javascript"></script>
    {% endfor %}
    <script src="catalog/view/javascript/common.js" type="text/javascript"></script>
    {% for link in links %}
    <link href="{{ link.href }}" rel="{{ link.rel }}" />
    {% endfor %} {% for analytic in analytics %}
    {{
      analytic
    }}
    {% endfor %}
</head>

<body>
    <!-- Preloader -->
    <!-- <div id="page-preloader">
      <div class="load-wrap">
        <div class="square-black square"></div>
        <div class="square-orange square"></div>
        <div class="load-img">
          <img src="{{ image_link }}/preload-img.png" alt="B" />
        </div>
      </div>
    </div> -->

    <nav id="top">
        <!-- Navigation -->
        <div class="nav-wrap">
            <div class="nav">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-3 col-sm-3 d-md-none text-center">
                            <button class="bars d-lg-none menu-open" type="button">
                                <i class="fas fa-bars"></i>
                            </button>
                        </div>
                        <div class="d-none d-md-block col-md-8 col-xl-5 menu-collaps">
                            <ul class="menu d-flex justify-content-center justify-content-xl-start">
                                <li class="menu__item">
                                    <a href="#merits-section" class="menu__link go-to">
                                        Преимущества
                                    </a>
                                </li>
                                <li class="menu__item">
                                    <a href="#hits-section" class="menu__link go-to">
                                        Каталог
                                    </a>
                                </li>
                                <li class="menu__item">
                                    <a href="#about-section" class="menu__link go-to">
                                        О компании
                                    </a>
                                </li>
                                <li class="menu__item">
                                    <a href="#feedback-section" class="menu__link go-to">
                                        Отзывы
                                    </a>
                                </li>
                                <li class="menu__item">
                                    <a href="#contacts-section" class="menu__link go-to">
                                        Контакты
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-6 col-md-2 logo-order">
                            <div id="logo">
                                {% if logo %} {% if home == og_url %}
                                <img src="{{ image_link }}/logo-tab.png" title="{{ name }}" alt="{{ name }}"
                                    class="header-logo d-inline-block d-sm-none d-md-inline-block d-lg-none logo-tab" />
                                <img src="{{ image_link }}/header-logo.png" title="{{ name }}" alt="{{ name }}"
                                    class="header-logo d-none d-sm-inline-block d-md-none d-lg-inline-block" />
                                {% else %}
                                <a href="/" class="logo">
                                    <img src="{{ image_link }}/logo-tab.png" title="{{ name }}" alt="{{ name }}"
                                        class="header-logo d-inline-block d-sm-none d-md-inline-block d-lg-none logo-tab" />
                                    <img src="{{ image_link }}/header-logo.png" title="{{ name }}" alt="{{ name }}"
                                        class="header-logo d-none d-sm-inline-block d-md-none d-lg-inline-block" />
                                </a>
                                {% endif %} {% else %}
                                <h1>
                                    <a href="/">{{ name }}</a>
                                </h1>
                                {% endif %}
                            </div>
                        </div>
                        <div class="d-none col-lg-4 d-xl-flex justify-content-around worktime">
                            <div class="time d-flex">
                                <i class="fas fa-clock"></i>
                                <div class="time__wrap">
                                    <p class="time__daily">
                                        Пн-Пт — с 8:00 до 18:00;
                                    </p>
                                    <p class="time__holiday">
                                        Сб — с 8:00 до 14:00
                                    </p>
                                </div>
                            </div>
                            <div class="header-contacts d-flex flex-column">
                                <div class="header-contacts__wrap">
                                    <i class="fas fa-phone"></i>
                                    <a href="tel:{{ telephone }}" class="header-contacts__tel">
                                        {{ telephone }}
                                    </a>
                                </div>
                                <div class="header-contacts__wrap">
                                    <i class="fas fa-envelope"></i>
                                    <a href="mailto:opt@tdbravomebel.ru" class="header-contacts__mail">
                                        opt@tdbravomebel.ru
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="nav-search d-none col-lg-4">
                            {{ search }}
                        </div>
                        <div class="col-3 col-md-2 col-xl-1 text-center">
                            <a href="{{ shopping_cart }}" title="{{ text_shopping_cart }}" class="basket">
                                <span class="basket__total">
                                    {{ text_items }}
                                </span>
                                <img src="{{ image_link }}/basket.png" alt="корзина" class="basket__img" />
                                <span class="basket__number">
                                    <!-- {{ text_items }} --> 12
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>


    {% for module in modules %}
{{ module }}
{% endfor %}